<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ura.admin.dao.SysUserDao">
  <select id="queryAllPermissionsByUserId" resultType="string">
    select m.perms from sys_user_role ur
      left join sys_role_menu rm on ur.role_id = rm.role_id
      left join sys_menu m on rm.menu_id = m.menu_id
    where ur.user_id = #{userId}
  </select>

  <select id="queryAllMenuIdByUserId" resultType="long">

  </select>

  <select id="queryByUserName" resultType="com.ura.admin.entity.SysUserEntity">
    select * from sys_user where username = #{userName}
  </select>
</mapper>